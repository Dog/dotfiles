# Install native apps
# Usage: `brew bundle Caskfile`
install caskroom/cask/brew-cask
tap caskroom/versions

cask update

# Development Tools
cask install --appdir=/Applications dash
cask install --appdir=/Applications sequel-pro
cask install --appdir=/Applications vivaldi
cask install --appdir=/Applications postgres
cask install --appdir=/Applications vmware-fusion
cask install --appdir=/Applications vagrant
cask install --appdir=/Applications hyperterm
cask install --appdir=/Applications slack

# Plugins/Codecs
cask install --appdir=/Applications flash
cask install --appdir=/Applications flashlight

# Applications
cask install --appdir=/Applications 1password
cask install --appdir=/Applications vlc
cask install --appdir=/Applications the-unarchiver
cask install --appdir=/Applications unrarx
cask install --appdir=/Applications vagrant
cask install --appdir=/Applications evernote
cask install --appdir=/Applications flash
cask install --appdir=/Applications silverlight
cask install --appdir=/Applications alfred

cleanup
